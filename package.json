{
  "name": "@experiments/root",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently -n gateway,experiment,decision,dashboard -c blue,green,yellow,magenta \"pnpm dev:gateway\" \"pnpm dev:experiment\" \"pnpm dev:decision\" \"pnpm dev:dashboard\"",
    "dev:experiment": "pnpm --filter experiment-service run dev",
    "dev:decision": "pnpm --filter decision-service run dev",
    "dev:gateway": "pnpm --filter api-gateway run dev",
    "dev:dashboard": "pnpm --filter dashboard run dev",
    "lint": "pnpm -r run lint",
    "test:unit": "pnpm -r --filter \"!integration-tests\" run --if-present test",
    "test:integration": "pnpm --filter integration-tests run test"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
